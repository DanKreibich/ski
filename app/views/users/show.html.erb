<div class="wrapper">
  <div class ="instructor-head"> <!-- continue with _show_instructor.scss-->
    <%= image_tag ("#{@instructor.avatar}"), class: "avatar-large" %>
    <div>
    <h1><%= @instructor.first_name %> <%= @instructor.last_name %></h1>
    <h3>Resort: <%= @instructor.resort %></h3>
    </div>
    <%= link_to "Continue", new_user_trip_path(@instructor), method: :get, class: "blue-btn" %>
  </div>
</div>

<%= link_to "Back", users_path, method: :get %> <br><br>

<%= image_tag ("#{@instructor.avatar}"), height: "150px;", width: "150px;" %>
<p>Gender: <%= @instructor.gender%></p>
<p>Phone: <%= @instructor.phone %></p>
<p>Description: <%= @instructor.description %></p>
<p>Minimum booking hours: <%= @instructor.min_booking_hours %></p>
<p>Level: <%= @instructor.level %></p>
<p>Price/hour: <%= @instructor.hourly_rate %></p>
<p>Price/day: <%= @instructor.day_rate %></p>
<p>Max students: <%= @instructor.max_num_students %></p>
<p>Birth date: <%= @instructor.birth_date %></p>

<h1>Reviews</h1>
<% @reviews.each do |review|  %>
  <%= review.id %>
  <%=  review.description %>
<% end %>
