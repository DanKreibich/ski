<div class="wrapper">
  <div class ="instructor-head"> <!-- continue with _show_instructor.scss-->
    <div class="name-block">
      <div class="avatar-large" style="background-image: url(<%= @instructor.avatar %>)"></div>
      <div>
        <h1 class="instructor-name"><%= @instructor.first_name %> <%= @instructor.last_name %></h1>
        <p class="price-hour"><%= (@instructor.hourly_rate).to_i %> ‚Ç¨ per hour</p>
        <p class="instructor-rating"><%= image_tag "rating.svg", class: "rating-star" %><%= @instructor.ratings_average %></p>
      </div>
    </div>
    <%= link_to "Book a lesson", new_trip_path(@instructor), method: :get, class: "booking-btn" %>
  </div>
</div>

<div class="instructor-body">
  <div class="container-font-size"><h3 class="font-size">üö° Resort</h3><br><p><%= @instructor.resort %></p></div>
  <div class="instructor-description">
    <div class="instructor-description-header">üìù Description</div><br><p><%= @instructor.description %></p>

  </div>

  <h1 class="blue-font font-size">Photos</h1>
  <div class="photo-area">
    <% @photos.each do |photo| %>
      <%= image_tag ("#{photo.url}") %>
    <% end %>
  </div>

  <h1 class="blue-font font-size">Reviews</h1>
  <div class="review-container">
    <!-- creates for each review a separate box -->
    <% @reviews.each do |review|  %>
      <div class="review-card">
        <div class="review-info">
          <p class="blue-font review-name"><%= review.student.first_name %></p>
          <p class="rating-review"><%= image_tag("rating.svg") %> <%= review.rating %></p>
        </div>
        <p class="review-body"><%= review.description %></p>
      </div>
    <% end %>
  </div>
</div>
