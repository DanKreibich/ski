<%= form_tag users_path, method: :get, class: "search-form-home-page" do%>
  <%= text_field_tag 'location', nil, autocomplete: :off, placeholder: 'Choose your location', class: 'input-form', required: true %>
  <%= date_field_tag 'start_date', '', as: :string, placeholder: "From", class: "input-form datepicker", min: Date.today, required: true %>
  <%= date_field_tag 'end_date','', as: :string, placeholder: "To", class: "input-form datepicker", min: Date.today, required: true %>
  <%= submit_tag "Search", class: "blue-btn"%>
<% end %>
